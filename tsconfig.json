{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/ng2-bootstrap",
    "releases",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  },
  "files": [
    "build/lib/angular2-ui-switch/dist/index.d.ts",
    "build/lib/angular2-ui-switch/dist/ui-switch.component.d.ts",
    "build/lib/angular2-ui-switch/src/index.ts",
    "build/lib/angular2-ui-switch/src/ui-switch.component.ts",
    "src/app/app.component.ts",
    "src/app/app.module.ts",
    "src/app/appconfig.ts",
    "src/app/boot.ts",
    "src/app/components/cpu/cpu.component.ts",
    "src/app/components/cpu/cpu.mock.ts",
    "src/app/components/cpu/cpu.service.ts",
    "src/app/components/cputemp/cputemp.component.ts",
    "src/app/components/cputemp/cputemp.mock.ts",
    "src/app/components/cputemp/cputemp.service.ts",
    "src/app/components/garage/garage.component.ts",
    "src/app/components/garage/garage.service.ts",
    "src/app/components/lights/lights.component.ts",
    "src/app/components/memory/memory.component.ts",
    "src/app/components/memory/memory.mock.ts",
    "src/app/components/memory/memory.service.ts",
    "src/app/components/restart/restart.component.ts",
    "src/app/components/security-alarm/security-alarm.component.ts",
    "src/app/components/shutdown/shutdown.component.ts",
    "src/app/components/speakers/speakers.component.ts",
    "src/app/components/sprinkler/sprinkler.component.ts",
    "src/app/components/system/system.component.ts",
    "src/app/components/system/system.mock.ts",
    "src/app/components/system/system.service.ts",
    "src/app/components/weather/weather.component.ts",
    "src/app/containers/default/default.container.ts",
    "src/app/containers/settings/settings.container.ts",
    "src/app/polyfills.ts",
    "src/app/services/theme.service.ts",
    "src/app/vendor.ts",
    "typings/globals/core-js/index.d.ts",
    "typings/globals/node/index.d.ts",
    "typings/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
